<%= simple_form_for @goal, url: manager_goals_path,
                    html: { class: 'form_goal_new relative',
                            data: {
                              controller: 'nested-form',
                              nested_form_wrapper_selector_value: '.nested-form-wrapper'
                            } } do |form| %>
  <div class="flex justify-between items-center mb-4">
    <h1 class="font-bold text-4xl"><%= t('.add') %></h1>
    <div>
      <%= form.button :submit, t('views.manager.goals.new.save'), class: 'cursor-pointer' %>
    </div>
  </div>
  <%= render "form", goal: @goal, form: form %>
<% end %>
